@import './../../static/styles/variables.styl'
@import './../../static/styles/grid.styl'

.header
  color $w
  padding 20px 30px
  width 100%
  display flex
  justify-content space-between
  align-items center
  background-color $mainColor

  &._transparent
    background-color transparent

.logo
  font-size 18px
  line-height 22px
  color inherit 
  text-transform uppercase
  text-decoration none
  flex-shrink 0

.nav
  display flex
  align-items center

  +below('md')
    display none

  &__list
    display flex

  &__elem
    padding 0 20px
    cursor pointer
    height 100%
    
    &:hover
      text-decoration underline
    

    &._dropdown
      position relative
      svg
        transition-duration .1s
        margin-left 8px
        width 16px
        height 9px

      &:hover
        svg
          transform rotate(180deg)
        .nav
          &__dropdown
            display block
      .nav
        &__dropdown
          display none
          overflow visible
          position absolute
          z-index 99
          top 100%
          right -100px
          padding-top 30px
          height auto

          &:before
            content ''
            display block
            border-left 8px solid transparent;
            border-right 8px solid transparent;
            border-bottom 12px solid $w;
            position absolute
            top 18px
            right 150px

          & > .nav__list
            background-color $w
            padding 25px 5px
            border-radius 20px
            min-width 300px
            min-height 110px
            max-height 300px
            box-shadow 0px 2px 3px rgba(0, 0, 0, 0.25)
        &__list
          flex-flow column wrap
        &__elem
          color $mainColor
          margin-bottom 5px

          
