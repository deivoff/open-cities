.os-nav
  display flex
  &__list
    list-style-type none
    display flex
    width 100%
    justify-content space-around
    align-items center
    margin 0 30px 0 0
    max-width 70vw

    @media all and (max-width 782px)
      display none
  
  &__elem
    margin 0 0 0 30px

  &__link
    color inherit 
    text-decoration none