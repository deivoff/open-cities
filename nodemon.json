{
  "restartable": "rs",
  "exec": "ts-node --project tsconfig.server.json server/index.ts",
  "ignore": [".git", "node_modules/**/node_modules", "server/**/*.spec.ts"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": ["server", "static", "components", "pages"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts, tsx, js, json"
}